/*
  The SCSS basefile for what will be transpiled into app.wxss
*/
page {
  background-color: #fff;
  font-size: 14px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  min-height: 100vh;
}

.color-primary {
  color: #fff !important;
}

.btn {
  border-radius: 0;
  padding: 10rpx 25rpx;
}

.btn:after {
  display: none;
}

.btn-primary {
  background-color: #fff;
}

.btn-seconary {
  background-color: #fff;
}

.container {
  height: auto;
  width: 100%;
  position: relative;
  display: block;
  justify-content: unset;
  padding: 20rpx;
  overflow: auto;
}

.container--padded {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.container-flex {
  height: auto;
  width: 100%;
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
  justify-content: center;
  -webkit-justify-content: center;
  resize: vertical;
  overflow: auto;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
